{
  "name": "buyer-dashboard-system",
  "version": "1.1.0",
  "description": "Система управления рабочими таблицами байеров с реальным временем и метриками рекламы",
  "homepage": ".",
  "private": true,
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "ag-grid-community": "^31.0.0",
    "ag-grid-react": "^31.0.0",
    "lucide-react": "^0.263.1",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.26.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^5.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "npm run build && npx netlify deploy --prod --dir=build",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json,css,md}'",
    "type-check": "tsc --noEmit",
    "metrics:test": "node scripts/testMetricsProxy.js",
    "dev": "netlify dev",
    "functions:serve": "netlify functions:serve",
    "functions:build": "netlify functions:build",
    "test:local": "npm run build && netlify dev --live",
    "cache:clear": "node scripts/clearMetricsCache.js",
    "cache:stats": "node scripts/getCacheStats.js",
    "cache:update": "node scripts/updateMetricsCache.js",
    "netlify:deploy": "netlify deploy --prod",
    "netlify:functions": "netlify functions:list",
    "netlify:logs": "netlify functions:logs"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "react-hooks/exhaustive-deps": "warn",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/jest": "^30.0.0",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "node-fetch": "^2.7.0",
    "netlify-cli": "^17.0.0",
    "dotenv-cli": "^7.4.2",
    "cross-env": "^7.0.3"
  },
  "proxy": "http://localhost:3000",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "react",
    "dashboard",
    "buyers",
    "creatives",
    "metrics",
    "supabase",
    "ads-analytics",
    "netlify-functions"
  ],
  "author": "Your Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourcompany/buyer-dashboard-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourcompany/buyer-dashboard-system/issues"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/**/*.test.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "cacheConfig": {
    "metricsCache": {
      "enabled": true,
      "autoUpdateSchedule": "0 1 * * *",
      "timezone": "Europe/Kiev",
      "description": "Автоматическое обновление кеша метрик каждый день в 04:00 по Киеву"
    }
  }
}
